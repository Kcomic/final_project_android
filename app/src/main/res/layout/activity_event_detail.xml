<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kmitl.mobile.project.bawonsak58070074.tradeevent.EventDetailActivity"

    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <ImageView
        android:id="@+id/eventImage"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@drawable/event"
        android:scaleType="centerCrop"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f9f6f6"
            >
            <TextView
                android:id="@+id/eventDateDec"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="15Dec\n-\n20Dec"
                android:gravity="center"
                android:background="#ff4656"
                android:textColor="#FFFFFF"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >


            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/eventNameDec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EventName"
                android:textStyle="bold"
                android:textColor="#000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                >
                <ImageView
                    android:id="@+id/eventLocationIC"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_action_name"
                    />
                <TextView
                    android:id="@+id/eventLocationDec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ห้องน้ำ"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    />

            </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            >
            <ImageView
                android:id="@+id/eventTimeImage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_dialog_time"
                />
            <TextView
                android:id="@+id/eventTimeDec"
                android:layout_toRightOf="@+id/eventTimeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 - 22:00"
                android:layout_marginTop="3dp"
                android:textColor="#000000"
                />
            <ImageView
                android:paddingEnd="10dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_share"
                />
        </RelativeLayout>
        <TextView
            android:padding="20dp"
            android:text="@string/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp">
        <LinearLayout
            android:id="@+id/wantBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/button_selector"
            android:padding="3dp"
            android:layout_marginRight="40dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_buy"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Want to buy ?"
                android:textColor="#000000"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/wantGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/button_selector"
            android:padding="3dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_go"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Want to go ?"
                android:textColor="#000000"
                android:layout_gravity="center"
                />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
